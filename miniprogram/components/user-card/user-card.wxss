/* components/user-card/user-card.wxss */
.user-card {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
  background-color: #FFFFFF;
}

.user-card .avatar {
  width: 180rpx;
  height: 180rpx;
}

.user-card .nickname {
  font-size: 28rpx;
  font-weight: 600;
  line-height: 60rpx;
}