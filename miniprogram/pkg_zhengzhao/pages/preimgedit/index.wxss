/* pkg_zhengzhao/pages/preimgedit/index.wxss */

.container {
  height: 100vh;
  overflow: visible;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.container-head {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #fff;
}

.tips-item {
  line-height: 50rpx;
  color: #7e7e7e;
}

.container-content {
  padding: 0 20rpx;
}

.container-content-dec {
  width: 100%;
  margin-bottom: 20rpx;
  background-color: rgba(255, 255, 255, 1);
  line-height: 2;
  color: #333;
  border-radius: 10rpx;
  font-size: 28rpx;
  position: relative;
}

.container-content-dec-item {
  height: 50px;
  display: flex;
  justify-content: space-between;
}

.dec {
  white-space: nowrap;
  /*强制在一行显示*/
  text-overflow: ellipsis;
  /*设置超出内容显示...*/
  overflow: hidden;
  /*一定不能少 超出的内容进行隐藏*/
}

.colorPick {
  display: flex;
}

.circle {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
  border-radius: 30rpx;
}

.space {
  flex: 1;
}

.container-optBtn {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
}

.container-btn {
  width: 45%;
  height: 90rpx;
  border-radius: 10rpx;
  color: #fff;
  text-align: center;
  line-height: 90rpx;
  background: #FCAE38;
}


.tips {
  width: 100%;
  margin-bottom: 20rpx;
  background-color: rgba(255, 255, 255, 1);
  padding: 30rpx;
  line-height: 2;
  color: #333;
  border-radius: 10rpx;
  font-size: 28rpx;
  position: relative;
}

.tips .cu-btn {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}

.header {
  width: 100%;
  line-height: 2em;
  padding-left: 30rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.tips .li {
  margin-right: 20rpx;
}