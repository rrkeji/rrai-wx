/* pkg_zhengzhao/pages/editphoto/complete/index.wxss */
.container{
	width: 100vw;
	height: 100vh;
	display:flex;
	flex-flow:column nowrap;
	overflow: hidden;
}
.container-content{
	width: 100%;
	height: 48%;
}
.container-content-img{
	margin-top: 50rpx;
	display: flex;
	justify-content: center;
}
.img-msg{
	text-align: center;
	font-size: 12px;
	color: #ddd;
}
.container-opt{
	width: 100%;
	flex: 1;
	background: #fff;
}
.msg{
	margin-top: 50rpx;
	text-align: center;
}
.icon_complete{
	font-size: 80rpx;
	color: rgb(13, 163, 20);
}
.container-opt-btn{
	width: 90%;
	margin: 0 auto;
	position: fixed;
	bottom: 100rpx;
	right:0px;
    left:0px;
	
}
.container-opt-btn button {
	margin-bottom: 20rpx;
	box-shadow: 0 0 10rpx 5rpx rgba(67,142,219,.25);
	background-color: #0acaa2 !important;
	color: #fff !important;
	font-weight: normal;
	height: 90rpx;
	padding: 0;
	line-height: 90rpx;
	width: 100% !important;
	border-radius: 10rpx;
}
