/* pkg_rr/components/create-prompt-dialog/index.wxss */

.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.form-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  margin: 10rpx 0;
}

.form-item-label {
  font-size: 24rpx;
  color: #474747;
  line-height: 36rpx;
}

.form-item input {
  width: 100%;
  text-align: left;
  border: 2rpx solid #dedede;
  height: 40rpx;
  flex-grow: 1;
  line-height: 30px;
  height: 36px;
  background-color: #ECECEC;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #474747;
  display: inline-block;
  text-align: left;
}

.form-item .input-placeholder {
  font-size: 24rpx;
  color: #999999;
  font-weight: 500;
}

.form-item .form-item-tips {
  font-size: 24rpx;
  text-align: left;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}