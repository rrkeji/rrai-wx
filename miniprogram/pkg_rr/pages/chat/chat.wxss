/* pages/chat/chat.wxss */
page {
  background-color: #ffffff;
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow: hidden;
}

.container {
  width: 100vw;
  height: calc(100vh - 140rpx);
  position: relative;
  overflow: hidden;
  padding-top: 30rpx;
  text-align: center;
  box-sizing: border-box;
}

.tipBox {
  position: absolute;
  display: flex;
  align-items: center;
  top: 0rpx;
  z-index: 99;
  width: 100%;
  height: 70rpx;
  background-color: #EEEEEE;
  padding: 0 10rpx;
}

.tipBox .notice-icon {
  height: 35rpx;
  width: 35rpx;
  margin-top: 18rpx;
  margin-right: 10rpx;
}

.tipBox .tipMessage {
  display: flex;
  justify-content: flex-start;
  color: #666;
  font-size: 26rpx;
  line-height: 70rpx;
  white-space: nowrap;
}

.historycon {
  height: 100%;
  width: 100%;
  border-top: 0px;
  padding-bottom: 90rpx;
  overflow: hidden;
}

.history {
  height: 100%;
  margin-top: 15px;
  margin-bottom: 240rpx;
  padding: 10rpx;
  font-size: 14px;
  line-height: 40px;
  word-break: break-all;
  display: flex;
  flex-direction: column;
}

.empty-message {
  color: #999999;
}

/* 聊天 */
.chat-news {
  width: 100%;
  display: flex;
  flex-direction: row;
  margin: 20rpx 0rpx;
}

.request {
  justify-content: flex-end;
}

.response {
  justify-content: flex-start;
}

.request-content {
  background-color: #95EC69;
  text-align: left;
  border-radius: 10rpx;
  min-width: 76%;
  line-height: 48rpx;
  padding: 10rpx;
}

.response-content {
  background-color: #ECECEC;
  text-align: left;
  border-radius: 10rpx;
  min-width: 76%;
  line-height: 48rpx;
  padding: 10rpx;
}

.news-content {
  padding: 5rpx 10rpx;
  flex-grow: 1;
  min-width: 60%;
  max-width: 86%;
  display: flex;
  border-radius: 6rpx;
}

.actions-bar {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  border-top: 2rpx solid #dedede;
  background-color: #ECECEC;
}

.request-content .actions-bar {
  border-top: 2rpx solid #dedede;
  background-color: #95EC69;
}


.actions-bar-button {
  height: 80rpx;
}

.actions-bar-button button {
  width: 80rpx;
  font-weight: 700;
  border: 0;
  height: 80rpx;
  margin: 0rpx 10rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  color: #000000;
  padding: 2rpx 10rpx;
}

.news-avatar {
  width: 96rpx;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
}

.request .news-content {
  justify-content: flex-end;
}

.response .news-content {
  justify-content: flex-start;
}

.news-avatar .name {
  display: inline-block;
  text-align: center;
}

.news-avatar .avatar {
  display: inline-block;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}

.chat-notice {
  text-align: center;
  font-size: 30rpx;
  padding: 10rpx 0;
  color: #666;
}

.selectImg {
  display: inline-block;
  width: 150rpx;
  height: 150rpx;
  margin-left: 50rpx;
}

.new_img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 10rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  z-index: -1;
}

/* 信息输入区域 */
.message {
  position: absolute;
  bottom: 0;
  width: 100%;
  min-height: 100rpx;
  background-color: #FFFFFF;
}

.sendMessage {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  flex-wrap: nowrap;
  line-height: 66rpx;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  z-index: 3;
}

.sendMessage .times {
  min-width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 10rpx;
  background-color: #A7E9BB;
  color: #FFFFFF;
}

.sendMessage .item {
  display: flex;
  width: 80rpx;
  padding: 0;
}

.sendMessage .input {
  flex-grow: 1;
  line-height: 30px;
  height: 36px;
  background-color: #ECECEC;
  border-radius: 40rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #474747;
  display: inline-block;
  text-align: left;
}

.sendMessage .input-placeholder {
  font-size: 24rpx;
  color: #474747;
  margin-left: 15rpx;
  font-weight: 500;
}

.sendMessage .button {
  background-color: #FFFFFF;
  width: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.sendMessage .send-button {
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  background-color: #499CFB;
  border-radius: 50%;
  overflow: hidden;
  justify-content: center;
  align-items: center;
}

.send-button-inner {
  width: 52rpx;
  height: 52rpx;
}

@keyframes slidedown {
  from {
    transform: translateY(0);
  }

  to {
    transform: translateY(100%);
  }
}

.slidedown {
  animation: slidedown 0.5s linear;
}

.slideup {
  animation: slideup 0.5s linear;
}

@keyframes slideup {
  from {
    transform: translateY(100%);
  }

  to {
    transform: translateY(0);
  }
}

.loading {
  display: inline;
  align-items: center;
  min-width: 240rpx;
  padding: 0rpx 10rpx;
}

.loading1 {
  background-color: coral;
  color: #FFFFFF;
  display: flex;
  align-items: center;
  min-width: 240rpx;
  line-height: 60rpx;
  padding: 0rpx 10rpx;
}

.loading image {
  margin-left: 10rpx;
}

.loading-blink {
  animation: blink 0.5s linear infinite;
  -webkit-animation: loading-blink 0.5s linear infinite;
  -moz-animation: loading-blink 0.5s linear infinite;
  -ms-animation: loading-blink 0.5s linear infinite;
  -o-animation: loading-blink 0.5s linear infinite;
}

@keyframes loading-blink {
  0% {
    color: #000000;
  }

  50% {
    color: transparent;
  }

  100% {
    color: #000000;
  }
}


.offline {
  border: 6rpx solid red;
  box-sizing: border-box;
  animation: offline 1s infinite ease;
}

@keyframes offline {
  from {
    border: 6rpx solid red;
  }

  to {
    border: 0rpx solid red;
  }
}