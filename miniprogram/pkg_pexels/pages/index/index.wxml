<!--pkg_pexels/pages/index/index.wxml-->
<view class="wrap">
  <waterfall id="waterfall" generic:item="waterfall-item" list="{{list || []}}" idKey="id" imageKey="imgUrl" colNum="2" gutter="5%" bind:loadingChange="onLoadingChange"></waterfall>
  <view class="load-tips">
    <view wx:if="{{listDataLoading || waterfallLoading}}">加载中...</view>
    <view wx:if="{{loaded}}">加载完毕</view>
  </view>
</view>