/* pages/chat/index.wxss */
.container {
  position: relative;
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.message-stack {
  width: 100%;
  flex: 1;
  padding: 10rpx 10rpx;
  max-height: calc(100% - 120rpx);
}

.prompts-input {
  position: absolute;
  width: 100%;
  bottom:0;
  left:0;
  padding: 10rpx 0;
  background-color: #FFFFFF;
}