/**index.wxss**/
.container {
  width: 100%;
  margin-bottom: 60rpx;
}

.logo-ring {
  width: 460rpx;
  height: 460rpx;
  margin-top: 60rpx;
  padding: 0;
  /* border: 16rpx solid #A7E9BB; */
  border-radius: 50%;
  box-sizing: border-box;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.rr-avatar {
  overflow: hidden;
  width: 100%;
  height: 100%;
}

.top-title {
  background-color: #A7E9BB;
  color: #717372;
  font-weight: 600;
  font-size: 20rpx;
  width: 300rpx;
  padding: 16rpx 40rpx;
  border-radius: 36rpx;
}

.hi_text0 {
  margin-top: 20rpx;
  line-height: 30px;
  color: #717372;
  font-size: 26rpx;
  font-weight: 400;
}

.hi_text {
  line-height: 20px;
  font-size: 22rpx;
  color: #717372;
  font-weight: 500;
}

.entry-button-container {
  display: block;
  position: relative;
  width: 100%;
  text-align: center;
  margin: 0 auto;
  margin-top: 30rpx;
  margin-bottom: 80rpx;
}

.entry-button {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.entry-button .bg {
  height: 100rpx;
  width: 480rpx;
  border-radius: 60rpx;
  background-color: #499CFB;
}

.entry-button .img {
  height: 76rpx;
  width: 220rpx;
  position: absolute;
}