<!--pkg_painter/pages/diffusion/index.wxml-->
<view class="container-image-edit">
  <view class="form">
    <!-- 输入提示 -->
    <view class="form-item ">
      <view class="item-label">提示(符合)</view>
      <view class="item-input">
        <textarea class="prompt-textarea" maxlength="2000" adjust-position="true" bindconfirm="bindTextAreaConfirm" bindblur="bindTextAreaBlur" auto-height placeholder="输入关键信息" />
      </view>
      <view class="item-right other_upload">
        <view class="icon iconf icon-delete upload_img_icon" bindtap="chooseImageTap"></view>
      </view>
    </view>
    <!-- 输入提示 -->
    <view class="form-item ">
      <view class="item-label">反向(不要)</view>
      <view class="item-input">
        <textarea class="prompt-textarea" maxlength="2000" adjust-position="true" bindconfirm="bindTextAreaConfirm" bindblur="bindTextAreaBlur" auto-height placeholder="输入关键信息" />
      </view>
      <view class="item-right other_upload">
        <view class="icon iconf icon-delete upload_img_icon" bindtap="chooseImageTap"></view>
      </view>
    </view>
    <view class="form-item submit-button-item">
      <view></view>
      <view class="submit-button" bindtap="onSubmit">提交</view>
    </view>
  </view>
  <!-- 图片显示 -->
  <view class="result-box" wx:if="{{resultList.length}}">
    <view class="result-tip">
      以下是生成图片<text style="color: red;">(注:如有需要点击图片后长按保存)</text>
    </view>
    <view class="result-list">
      <view wx:for="{{resultList}}" wx:key="index" class="result-item">
        <!-- 图片上传展示 -->
        <image src="{{item}}" mode="widthFix" class="result-item-image" data-index="{{index}}" bindtap="previewBigImage"></image>
      </view>
    </view>
  </view>
</view>
<tab-bar id="f-bar" idx="1" aiType="ChatGPT_Edit_Image"></tab-bar>