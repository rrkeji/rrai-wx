/* pkg_painter/pages/home/index.wxss */
page {
  background-color: #ffffff;
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow: hidden;
}

.container {
  width: 100vw;
  height: calc(100vh - 140rpx);
  position: relative;
  overflow: hidden;
  padding-top: 30rpx;
  text-align: center;
  box-sizing: border-box;
}

.card-view {
  height: 440rpx;
  border-bottom: 2rpx solid #DEDEDE;
}

.cards {
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  justify-content: center;

}

.cards .card-item {
  display: flex;
  flex-direction: column;
  width: 340rpx;
  height: 170rpx;
  background-color: #A7E8BB;
  color: #FFFFFF;
  margin: 10rpx 10rpx;
}

