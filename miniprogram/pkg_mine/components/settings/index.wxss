/* pkg_mine/components/settings/index.wxss */
@import '/iconfont.wxss';

.iconf {
  font-family: "iconfont" !important;
  font-size: inherit;
  font-style: normal;
}

.mine-list {
  width: 100vw;
  margin-top: 10rpx;
  display: flex;
  flex-grow: 1;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.mine-item {
  width: 100%;
  height: 120rpx;
  background-color: #FFFFFF;
  margin: 10rpx 0rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.mine-item .mine-item-title {
  color: #a4a4a4;
  flex-grow: 1;
  font-size: 24rpx;
  line-height: 120rpx;
  margin-left: 20rpx;
}

.mine-item .mine-item-icon {
  background-color: #499CFB;
  width: 90rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  margin-left: 30rpx;
}

.mine-item .mine-item-button {
  background-color: #CBE4FF;
  color: #0062DB;
  width: 120rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 24rpx;
  margin-right: 30rpx;
  font-weight: 500;
  font-size: 24rpx;
  padding: 0;
}

.mine-item .mine-item-icon image {
  width: 46rpx;
  height: 46rpx;
}

.mine-item-icon .icon {
  color: #FFFFFF;
  font-size: 46rpx;
}