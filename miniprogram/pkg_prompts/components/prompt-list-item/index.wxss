/* pkg_prompts/components/prompt-list-item/index.wxss */
/* 列表项自定义结构样式 */
.item {
  margin: 10rpx 20rpx;
  background-color: #FFFFFF;
}

.recommend-item {
  display: flex;
  flex-direction: column;
  padding: 30rpx 0 0;
  margin: 0 30rpx;
  width: calc(100vw - 60rpx);
}

.recommend-item .item-image {
  display: block;
  width: 100%;
  height: 300rpx;
  /* display: block; */
}

.recommend-item .empty-image .item-image {
  display: flex;
}

.recommend-item .item-title {
  font-size: 24rpx;
  line-height: 3em;
  background-color: #fff;
  padding: 0 30rpx;
}

.normal-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.normal-item .item-image {
  width: 120rpx;
  height: 120rpx;
  background-color: cornflowerblue;
  border-radius: 8rpx;
}

.normal-item .item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}

.normal-item .item-right {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}

.normal-item .empty-image .item-image {
  display: flex;
}

.normal-item .item-title {
  font-size: 24rpx;
  line-height: 3em;
  background-color: #fff;
  padding: 0 30rpx;
}

.normal-item .item-prompts {
  flex: 1;
  font-size: 24rpx;
  line-height: 3em;
  background-color: #fff;
  padding: 0 30rpx;
}

.normal-item .item-tags {
  font-size: 16rpx;
  background-color: #fff;
  width: 100%;
  display: flex;
  justify-content: flex-end;
}

.normal-item .item-right .item-button {
  width: 66rpx;
  height: 66rpx;
  line-height: 60rpx;
  text-align: center;
  color: #FFFFFF;
  box-sizing: border-box;
  background-color: crimson;
  border-radius: 50%;
}